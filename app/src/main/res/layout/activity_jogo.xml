<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="com.aula.hal.activities.JogoActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/pontuacaoText"
        android:textColor="@color/colorAccent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:id="@+id/vermelho"
                    android:onClick="cliqueVermelho"
                    android:background="@drawable/vermelho_selector"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.24"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:id="@+id/verde"
                    android:layout_weight="1"
                    android:onClick="cliqueVerde"
                    android:background="@drawable/verde_selector"
                    android:layout_gravity="left"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <Button
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:id="@+id/azul"
                    android:layout_weight="1"
                    android:onClick="cliqueAzul"
                    android:background="@drawable/azul_selector"
                    android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:id="@+id/amarelo"
                    android:onClick="cliqueAmarelo"
                    android:background="@drawable/amarelo_selector"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
