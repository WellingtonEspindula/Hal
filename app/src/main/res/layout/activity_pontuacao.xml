<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ea776c" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aula.hal.Activities.PontuacaoActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over!!!"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/pontos"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"/>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UsuÃ¡rio"
                android:id="@+id/textView6"
                android:textColor="@color/colorAccent"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:layout_weight="1"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criar"
                android:id="@+id/button10"
                android:onClick="criarUsuario"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Compartilhar"
            android:id="@+id/button11"
            android:layout_gravity="bottom|center_horizontal"
            android:onClick="compartilhar"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Jogar Novamente"
            android:id="@+id/button12"
            android:layout_gravity="bottom|center_horizontal"
            android:onClick="jogarNovamente"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Menu Inicial"
            android:id="@+id/button13"
            android:layout_gravity="bottom|center_horizontal"
            android:onClick="menu"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorAccent"/>
    </LinearLayout>

</LinearLayout>
